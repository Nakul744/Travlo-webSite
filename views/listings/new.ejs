<% layout("layout/boilerplate")%>


    
<div class="row">
    
    <div class="col-8 offset-2">
        <h3>Create a new listing</h3>

        <form action="/listing" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
  <div class="mb-3">
    <label  class="form-label">Title</label>
    <input type="text" name="listing[title]" class="form-control" placeholder="Enter The Title" required>
     <div id="validationServerUsernameFeedback" class="invalid-feedback">
        Please Enter title
      </div>
  </div>
  <div class="mb-3"> 
    <label  class="form-label">Description</label>
    <input  style="height: 5rem;"  type="text" name="listing[description]"  class="form-control"  required>
     <div id="validationServerUsernameFeedback" class="invalid-feedback">
        Please Enter Description
      </div>
  </div>
 
   <div class="mb-3">
    <label  class="form-label" > Upload Image</label>
    <input name="listing[image]" type="file"  class="form-control" required>
  

  </div>
  <div class="row">
  <!-- Price input (smaller column) -->
  <div class="mb-3 col-md-4">
    <label class="form-label">Price</label>
    <input type="number" name="listing[price]" class="form-control" placeholder="Enter The Price" required>
     <div id="validationServerUsernameFeedback" class="invalid-feedback">
         Please Enter Price 
      </div>
  </div>

  <!-- Country input (larger column) -->
  <div class="mb-3 col-md-8">
    <label class="form-label">Country</label>
    <input type="text" name="listing[country]" class="form-control" placeholder="Enter The Country" required>
     <div id="validationServerUsernameFeedback" class="invalid-feedback">
        Please Enter Country
      </div>
  </div>
</div>

  
  <div class="mb-3">
    <label  class="form-label">Location</label>
    <input type="text" name="listing[location]" placeholder="Enter The Location" class="form-control"  required>
     <div id="validationServerUsernameFeedback" class="invalid-feedback">
        Please Enter Location
      </div>
  </div>
  
  <button type="submit" class="btn btn-primary" style="background-color: rgb(212, 44, 44);  margin-bottom: 5rem;">Submit</button>
 </form>

    </div>
</div>