<!-- Bootstrap & Font Awesome CDN -->
<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
  rel="stylesheet"
/>
<link
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
  rel="stylesheet"
/>

<nav class="navbar navbar-expand-md bg-light border-bottom sticky-top py-2">
  <div class="container-fluid">
    <!-- Logo -->
    <a class="navbar-brand d-flex align-items-center" style="margin-left: 20px">
      <i class="fa-solid fa-globe fa-lg text-danger me-2"></i>
      <span class="fw-bold fs-4 text-danger">Travlo</span>
    </a>

    <!-- Search Bar -->
    <div style="margin-left: 30px; width: 270px">
      <form
        class="d-none d-md-flex mx-auto rounded-pill border shadow-sm px-3 py-1"
        style="max-width: 500px; width: 100%"
      >
        <input
          class="form-control border-0 shadow-none rounded-pill"
          type="search"
          placeholder="Search destinations"
          aria-label="Search"
          style="width: 100%"
        />
        <button class="btn text-danger" type="submit">
          <i class="fa-solid fa-magnifying-glass"></i>
        </button>
      </form>
    </div>

    <!-- Mobile Toggler -->
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="offcanvas"
      data-bs-target="#mobileMenu"
      aria-controls="mobileMenu"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Desktop Links -->
    <div class="collapse navbar-collapse justify-content-end">
      <ul class="navbar-nav align-items-center">
        <li class="nav-item">
          <a class="nav-link" href="/listing">Explore</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/listing/new">New Listing</a>
        </li>

        <% if (!currUser) { %>
        <li class="nav-item">
          <a class="nav-link" href="/signup"><b>Signup</b></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/login"><b>Login</b></a>
        </li>
        <% } else { %>
        <li class="nav-item">
          <a class="nav-link" href="/logout"><b>Logout</b></a>
        </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>

<!-- Mobile Offcanvas Menu -->
<div
  class="offcanvas offcanvas-end"
  tabindex="-1"
  id="mobileMenu"
  aria-labelledby="mobileMenuLabel"
>
  <div class="offcanvas-header">
    <h5 class="offcanvas-title">Menu</h5>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="offcanvas"
      aria-label="Close"
    ></button>
  </div>
  <div class="offcanvas-body">
    <!-- Mobile Search Bar -->
    <form class="d-flex mb-3">
      <input
        class="form-control me-2"
        type="search"
        placeholder="Search destinations"
        aria-label="Search"
      />
      <button class="btn btn-outline-danger" type="submit">
        <i class="fa-solid fa-magnifying-glass"></i>
      </button>
    </form>

    <ul class="navbar-nav">
      <li class="nav-item"><a class="nav-link" href="/listing">Explore</a></li>
      <li class="nav-item">
        <a class="nav-link" href="/listing/new">New Listing</a>
      </li>

      <% if (!currUser) { %>
      <li class="nav-item">
        <a class="nav-link" href="/signup"><b>Signup</b></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/login"><b>Login</b></a>
      </li>
      <% } else { %>
      <li class="nav-item">
        <a class="nav-link" href="/logout"><b>Logout</b></a>
      </li>
      <% } %>
    </ul>
  </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
